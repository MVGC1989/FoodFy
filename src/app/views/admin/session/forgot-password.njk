{% extends "parts/login-layout.njk"%}

{% block content %}

<section class="login-form">
    <form action="/admin/session/forgot-password" method="post" id="forgot">
        <h2 class="session-init">Esqueceu sua senha ?</h2>

        <div>
            <h4>E-mail:</h4>
            <div class="input-login">
            <input 
                type="email"
                name="email"
                value="{{user.email}}"
                placeholder="Digite seu e-mail para recuperar sua senha..."
                onblur="Validate.apply(this , 'isEmail')">
            </div>
        </div>
    </form>
    
    <footer class="footer">
        <button form="forgot"
            class="button_login" 
            type="submit">Recuperar
        </button>
    </footer>
</section>

{% endblock content %}
