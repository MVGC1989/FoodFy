<div>
    <h4>E-mail:</h4>
        <div class="input-login">
            <input 
                type="email"
                name="email"
                value="{{user.email}}"
                placeholder="Digite seu e-mail para entrar..."
                onblur="Validate.apply(this , 'isEmail')">
        </div>
</div>

<div>
    <h4>Nova Senha:</h4>
        <div class="input-login">
            <input 
                type="password"
                name="password"
                placeholder="Digite sua nova senha...">
        </div>
</div>

<div>
    <h4>Repetir Senha:</h4>
        <div class="input-login">
            <input 
                type="password"
                name="passwordRepeat"
                placeholder="Repita sua nova senha...">
        </div>
</div>
