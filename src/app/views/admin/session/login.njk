{% extends "parts/login-layout.njk"%}

{% block content %}

<section class="login-form">
    <form action="/admin/users/login" method="post" id="login">
        <h2 class="session-init">Iniciar Sessão</h2>

        {% include "admin/session/fields.njk"%}
    </form>
    
    <a href="/">Página Inicial</a>

    <footer class="footer">
        <a href="/admin/users/forgot-password">Esqueceu ou quer mudar sua senha?</a>
        
        <button class="button_login" type="submit" form="login">Acessar</button>
    </footer>
</section>
{% endblock content%}