{% extends "parts/layoutadmin.njk" %}

{% block content %}

<h3 class="index">Gerenciar Chefs</h3>

{% if chefs %}
<div class="index_cards_chefs">
    {% for chef in chefs %}
        <div class="cardindex_chefs">
            <div>
                <img class="avatar_chefs" 
                    src="{{chef.image}}" 
                    alt="Foto de:{{chef.name}} ." 
                    srcset="">
            </div>
                <div>
                    <h1>{{chef.name}}</h1>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
        </div>
    {% endfor %}
</div> 

{% else %}
<div class="modal">
    <p>Ops...n√£o existem chefs cadastrados!</p>
    <button onclick="window.location.href='/admin/chefs/create'"
            class="modal-new-recipe">Cadastre um Chef
        </button>
</div>
{% endif %}

<div 
    class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}>
</div>

{% endblock %}