{% extends "parts/layoutAdmin.njk" %}

{% block content %}

<form action="/admin/recipes?_method=PUT" method="post" enctype="multipart/form-data">
<!-- esse fomr=delete serve para link o botão com o seu respectivo forma através de um id delete-->
    <h3 class="edit">Editando Receita
        <button 
            form="delete" 
            class="button_delete_recipe"
            id="del">Deletar
        </button>
        <button 
            class= "button_save" 
            type="submit" 
            onclick ="Validate.allFields(event)"
            > Salvar Receita
        </button>
    </h3>
            {% include "admin/recipes/fields.njk"%}
    <input 
        type="hidden" 
        name="id" 
        value="{{recipes.id}}">
</form>

<form id="delete" action="/admin/recipes?_method=DELETE" method="post">
    <input 
        type="hidden" 
        name="id" 
        value="{{recipes.id}}">
</form>
{% endblock %}