        <button type="submit">Buscar</button>
    </form>
</div>
    </header>

{% block content%} {% endblock %}

    <footer class="rodape">
        <p>Todos os direitos reservados, receitas Foodfy &copy;</p>
    </footer>

    <script src="/scripts/header_and_cards_home.js"></script>
    <script src="/scripts/show_hide_buttons.js"></script>
    <script src="/scripts/pagination.js"></script>
    <script src="/scripts/image_upload.js"></script>
</body>
</html>