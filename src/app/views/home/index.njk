{% extends "parts/layout.njk" %}

{% block head %}
    <title>FoodFy</title>
{% endblock %}

{% block content%}

<header class="megacard">
    <div class="titlecard">
        <h1>As melhores receitas</h1>
        <h2>Aprenda a construir os melhores 
            pratos com receitas criadas por 
            profissionais do mundo inteiro.
        </h2>
    </div>
        <div class="imgchef">
            <img
                src= "/images/assets/chef.png" 
                alt="chefe">
        </div>
</header>

<div class="titlemore">
    <h3><strong>Mais Acessadas</strong></h3>
</div>

<section class="cards">
    {% for recipe in recipes %}
        {% if loop.index0 < 6 %}
            <div class="card" id={{recipe.id}}>
                <div class="cardimg_container">
                    <img 
                        src={{recipe.image}} 
                        alt={{recipe.title}}>
                </div>
                    <div class="nome_receita">
                        <h4>{{recipe.title}}</h4>
                    </div>
                        <div class="autor">
                            <p>por {{recipe.chef_name}}</p>
                        </div>
            </div>
        {% endif %}
    {% endfor %}
</section>

<script src="/scripts.js"></script>
{% endblock %}

